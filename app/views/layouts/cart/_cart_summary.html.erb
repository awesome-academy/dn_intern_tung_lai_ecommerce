<div class="col-lg-3">
  <div class="header__cart">
    <ul>
      <li>
        <%= link_to carts_path do %>
        <i class="fa fa-shopping-bag"></i>
        <span id="shopping__bag__count"><%= cart_count %></span>
        <% end %>
      </li>
    </ul>
    <div class="header__cart__price">
      <%= t "layouts.header.total" %>
      <span><%= translate_price subtotal %></span>
    </div>
  </div>
</div>
