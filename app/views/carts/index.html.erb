<% provide :title, t("cart.page_title") %>

<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="shoping__cart__table">
					<table>
						<thead>
							<tr>
								<th class="shoping__product"><%= t "cart.products" %></th>
								<th><%= t "cart.price" %></th>
								<th><%= t "cart.inventory" %></th>
								<th><%= t "cart.qty" %></th>
								<th><%= t "cart.total" %></th>
								<th></th>
							</tr>
						</thead>
						<tbody class="cart__items">
							<%= render "layouts/cart/cart_items" %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<div class="shoping__cart__btns">
					<%= link_to t("cart.btn.continue_shopping"), products_path, class: "primary-btn cart-btn" %>
					<%= link_to carts_path, class: "primary-btn cart-btn cart-btn-right" do %>
						<span class="icon_loading"> </span><%= t "cart.btn.update_cart" %>
					<% end %>
				</div>
			</div>
			<div class="col-lg-12">
				<div class="shoping__checkout">
					<h5><%= t "cart.cart_total" %></h5>
					<ul>
						<li>
							<%= t "cart.total" %>
							<span id="cart__subtotal"><%= translate_price subtotal %></span>
						</li>
					</ul>
					<%= link_to t("cart.btn.checkout"), "#", class: "primary-btn" %>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- Shoping Cart Section End -->
