<% if @result == :pending_remove %>
  $(".pending__popup").html("<%= j (render partial: "layouts/cart/modal", locals: {status: :pending_remove}) %>")
  $("#exampleModalCenter").modal("show")
<% else %>
  $(".cart__items").html("<%= j (render partial: "layouts/cart/cart_items") %>")
  $("#cart__subtotal").html("<%= j (translate_price subtotal) %>")
  $("#shopping__bag__count").html("<%= j (cart_count) %>")
  $("#shopping__bag__total").html("<%= j (translate_price subtotal) %>")
<% end %>
