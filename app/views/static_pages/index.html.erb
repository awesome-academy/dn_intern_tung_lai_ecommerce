<% provide :title, t("layouts.header.home") %>

<!-- Categories Section Begin -->
<section class="categories">
  <div class="container">
    <div class="row">
      <div class="categories__slider owl-carousel">
        <% categories_tree.each do |cat| %>
          <div class="col-lg-3">
            <div
              class="categories__item set-bg"
              data-setbg="img/categories/cat-1.jpg"
            >
              <h5><%= link_to cat[0], "#" %></h5>
            </div>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Categories Section End -->

<!-- Featured Section Begin -->
<section class="featured spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-title">
          <h2><%= t "home.featured_product" %></h2>
        </div>
        <div class="featured__controls">
          <ul>
            <li class="active" data-filter="*"><%= t "home.filter.all" %></li>
            <li data-filter=".oranges"><%= t "home.filter.food" %></li>
            <li data-filter=".fresh-meat"><%= t "home.filter.computer" %></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="row featured__filter">

      <!-- filter data later -->
      <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
        <div class="featured__item">
          <div
            class="featured__item__pic set-bg"
            data-setbg="img/featured/feature-1.jpg"
          >
            <ul class="featured__item__pic__hover">
              <li>
                <a href="#"><i class="fa fa-heart"></i></a>
              </li>
              <li>
                <a href="#"><i class="fa fa-retweet"></i></a>
              </li>
              <li>
                <a href="#"><i class="fa fa-shopping-cart"></i></a>
              </li>
            </ul>
          </div>
          <div class="featured__item__text">
            <h6><a href="#">Crab Pool Security</a></h6>
            <h5>$30.00</h5>
          </div>
        </div>
      </div>
      <!-- filter data later -->

    </div>
  </div>
</section>
<!-- Featured Section End -->

